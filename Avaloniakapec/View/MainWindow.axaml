<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Avaloniakapec.VM"
        mc:Ignorable="d" d:Width="400" d:Height="225"
        x:Class="Avaloniakapec.MainWindow"
        x:DataType="vm:BookVM"
        Title="Avaloniakapec">
        <Window.DataTemplates>
                <DataTemplate DataType="vm:BookVM">
                        <StackPanel>
                                <Label Content="{Binding Isbn, StringFormat = Номер: {0}}"/>
                                <Label Content="{Binding Title, StringFormat = Название: {1}}"/>
                                <Label Content="{Binding Author, StringFormat = {}Автор: {2}}"/>
                                <Label Content="{Binding Year, StringFormat = {}Год издания: {3}}"/>
                        </StackPanel>
                </DataTemplate>
        </Window.DataTemplates>
        <ListBox ItemsSource="{Binding Books }" SelectedItem="{Binding SelectedBook }"/>
                
      
</Window>
